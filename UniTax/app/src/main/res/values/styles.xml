    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="UniTaxTheme" parent="Theme.AppCompat.Light.DarkActionBar" >
        <item name="colorPrimary">@color/uniTaxPrimary</item>
        <item name="colorPrimaryDark">@color/uniTaxPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorForeground">@android:color/background_dark</item>
        <item name="android:textColorPrimary">@android:color/background_light</item>
        <item name="android:textColorPrimaryInverse">@android:color/background_dark</item>
    </style>

</resources>
